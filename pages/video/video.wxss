/* pages/video/video.wxss */
.container {}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 421.875rpx;
  line-height: 300rpx;
  background-color: rgb(0, 0, 0);
  position: fixed;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 421.875rpx;
  line-height: 300rpx;
}

.info {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  display: flex;
  position: fixed;
  background-color: rgba(255,255,255,1);
}

.title {
  margin-left: 20rpx;
}

button {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.mini-btn {
  margin-left: auto;
  margin-right: 50rpx;
  background-color: rgb(0, 225, 255);
}

.other {
  height: 80rpx;
  width: 100%;
  margin-left: 20rpx;
}

.tab-h {
  height: auto;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 0;
  z-index: 99;
}

.mvlist {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 1500rpx;
  margin-bottom: 50rpx;
  background-color: rgba(255, 0, 0, 0.3);
}


.mvlist {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  background-color: rgb(255, 255, 255);
  margin-bottom: 50rpx;
}

.mvbox {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  background-color: rgba(0, 0, 0, 0.03);
  margin-top: 50rpx;
}

.cover {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  flex: 0, 0, 200rpx;
  background-color: rgba(0, 0, 0, 0.3);
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.describe {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.time {
  font-family: cursive;
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.8);
  margin-top: -20rpx;
}

.tag {
  font-family: cursive;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
}

.divLine {
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 5rpx;
}

.divText {
  display: flex;
  color: rgba(0, 0, 0, 0.3);
  width: 100%;
  font-size: small;
  align-items: center;
  flex-direction: column;
  align-items: center;
}