/* pages/search/search.wxss */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  background-color: rgb(185, 190, 255);
  margin-bottom: 50rpx;
}

.switch-tab{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 300rpx;
  background-color: rgba(0, 0, 255, 0.3);
  margin-bottom: 50rpx;
}

.tab-line{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
}

.tab-title{
  height: 50rpx;
  width: 100rpx;
  font-size: 16px;
  margin-left: 25rpx;
  margin-right: 25rpx;
  font-size: 30rpx;
}

.divLine{
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 5rpx;
 }

 .divText{
  display: flex;
  color: rgba(0, 0, 0, 0.3);
  width: 100%;
  font-size: small;
  align-items: center;
  flex-direction: column;
  align-items: center;
 }

.listbar{
  display: flex;
  flex-wrap: nowrap;
}
/*顶部切换*/

.tab-h {
  height: 50rpx;
  width: 600rpx;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 50rpx;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  font-size: 30rpx;
  margin: 0 50rpx;
  display: inline-block;
}

.tab-item.active {
  color: rgb(175, 104, 104);
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 80rpx;
  background: rgb(175, 104, 104);
  position: absolute;
  bottom: 0;
  left: -13rpx;
  border-radius: 16rpx;
}

.filter{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0.3);
  margin-bottom: 50rpx;
}

.mvlist{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  /*background-color: rgba(255, 0, 0, 0.3);*/
  margin-bottom: 50rpx;
}

.mvbox{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  background-color: rgba(0, 255, 115, 0.3);
  margin-top: 50rpx;
}

.cover{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  flex: 0, 0, 200rpx;
  background-color: rgba(0, 0, 0, 0.3);
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.describe{
  display: flex;
  flex-direction: column;
  height: 200rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.time{
  font-family: cursive;
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.8);
  margin-top: 20rpx;
}
