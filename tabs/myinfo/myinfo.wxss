/* tabs/myinfo/myinfo.wxss */
.userinfo {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.usermotto {
  margin-top: 200rpx;
}

.divLine {
  margin-top: 100rpx;
  background: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 5rpx;
}

.tab-line {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
}

.tab-h {
  height: 50rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 50rpx;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 0;
  z-index: 99;
}


.tab-item {
  font-size: 30rpx;
  margin: 0 100rpx;
  display: inline-block;
}

.tab-item.active {
  color: rgb(175, 104, 104);
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 160rpx;
  background: rgb(175, 104, 104);
  position: absolute;
  bottom: 0;
  left: -25rpx;
  border-radius: 16rpx;
}
.mvlist {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  background-color: rgb(255, 255, 255);
  margin-bottom: 50rpx;
}

.mvbox {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 250rpx;
  background-color: rgba(0, 0, 0, 0.03);
  margin-top: 50rpx;
}

.cover {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  flex: 0, 0, 200rpx;
  background-color: rgba(0, 0, 0, 0.3);
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.describe {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.time {
  font-family: cursive;
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.8);
  margin-top: 20rpx;
}

.tag {
  font-family: cursive;
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
  margin-top: 40rpx;
}